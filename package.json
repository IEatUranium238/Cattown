{
  "name": "cattown",
  "version": "1.1.0",
  "description": "A lightweight, pure JavaScript markdown parser with built-in HTML sanitization using DOMPurify. Converts markdown to clean, safe HTML with customizable styling.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/markdownStyles.css"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:cjs && npm run build:types && npm run build:css",
    "build:cjs": "rollup -c rollup.config.js",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:css": "copyfiles -u 1 src/markdownStyles.css dist/",
    "test": "jest",
    "test:package": "node test-package.js",
    "demo": "vite preview",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "markdown",
    "html",
    "visualization",
    "tokenizer",
    "parser",
    "sanitization",
    "dompurify",
    "xss-protection"
  ],
  "author": "ieaturanium238",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/ieaturanium238/cattown.git"
  },
  "bugs": {
    "url": "https://github.com/ieaturanium238/cattown/issues"
  },
  "homepage": "https://github.com/ieaturanium238/cattown#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "dompurify": "^3.2.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^30.1.1",
    "copyfiles": "^2.4.1",
    "jest": "^30.1.1",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^5.0.0",
    "vite": "^7.1.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
